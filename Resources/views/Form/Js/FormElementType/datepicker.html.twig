{% else %}
    {% javascripts
    '@ElibertyFormElementTypeBundle/Resources/public/js/moment_locale_fr.js'
    '@ElibertyFormElementTypeBundle/Resources/public/components/bootstrap-datepicker/js/locales/bootstrap-datepicker.fr.js' %}
